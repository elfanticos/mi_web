.app-container([class.app-is-mobile]="mobileQuery.matches")
    mat-toolbar.app-toolbar.flex(color="primary")
        button(mat-icon-button, (click)="snav.toggle()")
            mat-icon menu
        h1.app-app-name Jhonatan Meza I.
        span.cs-spacer
        a(mat-button, *ngFor="let ruta of rutas", [routerLink]="['/'+ruta.path]") {{ruta.item}}
        a(mat-button, (click)="openModalCropperJs()") CropperJs
    mat-sidenav-container.app-sidenav-container([style.marginTop.px]="mobileQuery.matches ? 56 : 0")
        mat-sidenav(#snav, [mode]="mobileQuery.matches ? 'over' : 'side'", [fixedInViewport]="mobileQuery.matches", fixedTopGap="56")
            mat-nav-list
                a(mat-list-item, [routerLink]="['/'+ruta.path]", *ngFor="let ruta of rutas")
                    mat-icon {{ruta.icon}}
                    span {{ruta.item}}
        mat-sidenav-content
            .flex
                .section-main
                    router-outlet
                .section-sidebar
                    .text-right.margin-bottom
                        form([formGroup]="newForm")
                            div.margin-right
                                mat-form-field
                                    input(matInput, type="text", placeholder="Ingresa tu busqueda", formControlName="search", (keyup.enter)="searchMagic();")
                                    button(mat-button, matSuffix, mat-icon-button, aria-label="Clear", type="button", (click)="searchMagic();")
                                        mat-icon search
